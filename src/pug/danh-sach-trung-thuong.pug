      img.w-100(loading='lazy' src='./assets/theme/images/the-le/giai_1_ty.png?v=1.1.36' alt='')

  .winninglistsearchSection
    .container
      h2 DANH SÁCH TRÚNG THƯỞNG
      form(action='#')
        .field.position-relative
          .fieldinner.d-flex
            input#txtPhoneWinner(type='text' placeholder='Dò kết quả ngay!')
            button#btnSearchWinner(type='button')
              span.visually-hidden Tìm kiếm
      .winnerlisttable.w100.pb-5.mb-5.d-flex.px-5.px-xxl-0.text-center(style='justify-content: center;')
        table#gridListAwards.table.table-bordered.m-auto.row-border.hover.compact(cellspacing='0')
          thead
            tr
              th số điện thoại
              th mã dự thưởng
              th ngày quay thưởng
          tbody#tbodyGridListAwards
            tr
              td
              td
              td
      .row
        .col-12.col-md-4
          .box01
            img.w-100(loading='lazy' src='./assets/theme/images/box1.png?v=1.1.36' alt='')
        .col-12.col-md-4
          .box02
            img.w-100(loading='lazy' src='./assets/theme/images/box2.png?v=1.1.36' alt='')
        .col-12.col-md-4
          .box03
            img.w-100(loading='lazy' src='./assets/theme/images/box3.png?v=1.1.36' alt='')
      .deco.d-none.d-lg-block
        img.w-atuo(loading='lazy' src='./assets/theme/images/3_chai.png?v=1.1.36' alt='')
  
